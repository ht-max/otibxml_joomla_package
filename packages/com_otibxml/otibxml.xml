<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.5//DTD template 1.0//EN" "http://dev.joomla.org/xml/1.5/template-install.dtd">
<extension type="component" version="3.0" method="upgrade">
	<name>Otib XML</name>
	<author>Joomla CMS</author>
	<creationDate>March 2015</creationDate>
	<copyright>Copyright is broken</copyright>
	<authorEmail>ht-max@yandex.ua</authorEmail>
	<version>1.0</version>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>Component for parse Otib XML</description>

	<administration>
			<menu>COM_OTIBXML</menu>
			<files folder="administrator/components/com_otibxml">
				<filename>otibxml.php</filename>
				<filename>otibxml.xml</filename>
				<filename>controller.php</filename>
				<filename>index.html</filename>
				<folder>views</folder>
				<folder>models</folder>
				<folder>language</folder>
			</files>
			<languages folder="administrator/components/com_otibxml/language">
				<language tag="en-GB">en-GB/en-GB.com_otibxml.sys.ini</language>
				<language tag="nl-NL">nl-NL/nl-NL.com_otibxml.sys.ini</language>
			</languages>
	</administration>
	
	<files folder="components/com_otibxml">
		<filename>otibxml.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
	</files>
